@using FakeWeatherApp.Models.Enums
@model FakeWeatherApp.Models.ViewModels.WeatherForecastViewModel

<h1>Недельный прогноз</h1>

<table>
    <thead>
        <tr>
            <td></td>
            <td class="week-forecast-column">День 1</td>
            <td class="week-forecast-column">День 2</td>
            <td class="week-forecast-column">День 3</td>
            <td class="week-forecast-column">День 4</td>
            <td class="week-forecast-column">День 5</td>
            <td class="week-forecast-column">День 6</td>
            <td class="week-forecast-column">День 7</td>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Температура:</td>
            
            @{
                foreach (var dayForecast in Model.Forecast)
                {
                    <td class="week-forecast-column">
                        @dayForecast.Temperature
                    </td>
                }
            }
        </tr>
        
        <tr>
            <td>Влажность:</td>
                        
            @{
                foreach (var dayForecast in Model.Forecast)
                {
                    <td class="week-forecast-column">
                        @dayForecast.Humidity
                    </td>
                }
            }
        </tr>
    
        <tr>
            <td>Погода:</td>
            
            @{
                foreach (var dayForecast in Model.Forecast)
                {
                    <td class="week-forecast-column">
                        @switch(dayForecast.Type)
                        {
                            case WeatherType.Clear:
                                <span>Ясно</span>
                                <img class="weather-image-small" src="~/images/sunny.png" alt="Солнечно" />
                                break;
                                
                            case WeatherType.Cloudy:
                                <span>Облачно</span>
                                <img class="weather-image-small" src="~/images/cloudy.png" alt="Облачно" />   
                                break;
                                
                            case WeatherType.Rain:
                                <span>Дождь</span>
                                <img class="weather-image-small" src="~/images/rain.png" alt="Дождь"/> 
                                break;
                        }
                    </td>
                }
            }
        </tr>
    
    </tbody>
</table>

<a asp-controller="Home" asp-action="Index" title="Назад">Назад</a>